<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photoGallery.galleryMain"
    android:background="#FFFFFF"
    android:id="@+id/mainLayout">

    <RelativeLayout
        android:elevation="30dp"
        android:id="@+id/relativeLayout2"
        android:layout_width="398dp"
        android:layout_height="87dp"
        android:layout_marginBottom="642dp"
        android:background="@drawable/dashshape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="20dp"
            android:text="Upload Images"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:background="#57F6F3F3"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.666">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:gravity="center"
            android:text="Choose image"
            android:textColor="@color/Black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:background="#57F6F3F3"
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="163dp"
        android:elevation="30dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29">

        <ImageView
            android:id="@+id/AddImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="30dp"
            android:fadingEdgeLength="10dp"
            android:src="@drawable/ic_image" />

        <ImageView
            android:id="@+id/AddImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="175dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="175dp"
            android:layout_marginBottom="83dp"
            android:elevation="30dp"
            android:fadingEdgeLength="10dp"
            android:src="@drawable/ic_add" />

        <TextView
            android:layout_below="@+id/titleText"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="166dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="2dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="30dp"
        android:background="#57F6F3F3"
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.102">

        <EditText
            android:id="@+id/aboutPhoto"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/inputshape2"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Title Photo"/>

        <EditText
            android:id="@+id/aboutPhotoDesk"
            android:layout_width="314dp"
            android:layout_height="60dp"
            android:layout_below="@id/aboutPhoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/inputshape2"
            android:ems="10"
            android:hint="About Photo"
            android:inputType="textLongMessage" />


        <Button
            android:background="@color/colorPrimaryDark"
            android:id="@+id/buttonUpload"
            android:layout_width="104dp"
            android:layout_height="51dp"
            android:layout_below="@+id/aboutPhotoDesk"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="34dp"
            android:text="Upload"
            android:textColor="@color/Black" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>