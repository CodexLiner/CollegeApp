<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.SignUp">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Xhome"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Add Student"
            android:textColor="@color/Black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="Student to your Database"
            android:textSize="18sp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="750dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/imageView"
                    app:border_width="1dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/men"
                    app:border_color="@color/Black" />
            </LinearLayout>
            <EditText
                android:layout_gravity="center"
                android:id="@+id/EditName"
                android:layout_width="300dp"
                android:drawableStart="@drawable/personfocus"
                android:drawablePadding="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/inputshape2"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/EditRoll"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:drawableStart="@drawable/rollfocus"
                    android:drawablePadding="20dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/inputshape2"
                    android:ems="10"
                    android:hint="Roll"
                    android:inputType="numberSigned" />

                    <EditText
                        android:layout_gravity="center"
                        android:id="@+id/EditEmail"
                        android:layout_width="300dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/inputshape2"
                        android:drawableStart="@drawable/focusemail"
                        android:drawablePadding="20dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        />

                        <EditText
                            android:layout_gravity="center"
                            android:id="@+id/EditPhone"
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/inputshape2"
                            android:drawableStart="@drawable/phonefocus"
                            android:drawablePadding="20dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="12dp"
                            android:ems="10"
                            android:hint="Phone"
                            android:inputType="phone"/>

            <EditText
                android:layout_gravity="center"
                android:id="@+id/editAddress"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputshape2"
                android:ems="10"
                android:hint="Address"
                android:drawableStart="@drawable/cityfocus"
                android:drawablePadding="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:inputType="textPostalAddress" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/EditPass"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/inputshape2"
                    android:drawableStart="@drawable/focuslock"
                    android:drawablePadding="20dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword" />

                    <Button
                        android:elevation="1dp"
                        android:layout_gravity="center"
                        android:id="@+id/SignUpButton"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/buttonshape"
                        android:fontFamily="sans-serif-black"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="Add"
                        android:textAllCaps="false"
                        android:textSize="24sp"/>
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="10dp">



                <TextView

                    android:id="@+id/LoginActbutton"
                    android:layout_width="71dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="80dp"
                    android:fontFamily="sans-serif-medium"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="Login"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBar2"
        style="@style/SpinKitView.FadingCircle"
        android:layout_width="69dp"
        android:layout_height="60dp"
