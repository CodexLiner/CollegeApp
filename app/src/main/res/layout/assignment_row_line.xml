<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/rec_line2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/rec_line"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/assignment_shape"
        android:baselineAligned="false"
        android:elevation="1dp"
        android:foreground="@drawable/rip"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/rec_image"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:src="@drawable/notes">

        </ImageView>

        <LinearLayout
            android:id="@+id/assignmentRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assignmentTitle"
                android:layout_width="260dp"
                android:layout_height="25sp"
                android:layout_gravity="center|bottom"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:autoSizePresetSizes="@array/autosize_text_sizes"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/cabin"
                android:gravity="bottom|start"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="#7B1FA2"
                android:textSize="30sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20sp" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/assignName"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center|bottom|left|start"
                    android:layout_marginStart="8dp"
                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="start|center"
                    android:text="Shubham Yadav"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/assignSub"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="10dp"
                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="start|center"
                    android:text="Java"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/assignDate"
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_gravity="center|bottom|right|end"
                    android:layout_marginStart="10dp"
                    android:autoSizePresetSizes="@array/autosize_text_sizes"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="start|center"
                    android:text="25/01/2020"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>


        <!--        <TextView-->
